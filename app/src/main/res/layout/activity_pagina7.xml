<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#e4c5c4"
    android:layout_height="match_parent"
    tools:context=".pagina4">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="375dp"
        android:layout_height="284dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="180dp"
        android:fontFamily="@font/autour_one"
        android:text="Ricas mini torrtas con rica masa sabor vainilla nada secas, con un relleno a leche o a gusto, por encima una rica crema de leche con decorado de chispas de chocolate o con lo que le guste a usted, tenemos diferentes tooping a degustar, COMPRELO YA!"
