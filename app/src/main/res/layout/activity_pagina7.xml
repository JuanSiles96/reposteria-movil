        app:srcCompat="@drawable/cupkies" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="398dp"
        android:layout_height="113dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/akronim"
